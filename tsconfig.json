{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["DOM", "ES2021"],
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "build",
    "outDir": "build",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
